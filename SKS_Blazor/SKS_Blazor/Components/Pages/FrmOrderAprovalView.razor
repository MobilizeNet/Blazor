@using Gap.Blazor;
@using SKS_Blazor.Components;

<WMFormComponent model="@this.model">
	<WMGroupBoxComponent model="@this.model.Frame1">
		<WMLabelComponent model="@this.model.Label4"></WMLabelComponent>
		<WMTextBoxComponent model="@this.model.txtProviderName"></WMTextBoxComponent>
		<WMButtonComponent model="@this.model.cmdProviders"></WMButtonComponent>
		<WMLabelComponent model="@this.model.Label5"></WMLabelComponent>
		<WMComboBoxComponent model="@this.model.cmbStatus"></WMComboBoxComponent>
		<WMLabelComponent model="@this.model.Label2"></WMLabelComponent>
		<WMTextBoxComponent model="@this.model.txtContactName"></WMTextBoxComponent>
		<WMLabelComponent model="@this.model.Label3"></WMLabelComponent>
		<WMTextBoxComponent model="@this.model.txtContactLastName"></WMTextBoxComponent>
		<WMLabelComponent model="@this.model.Label6"></WMLabelComponent>
		<WMCheckBoxComponent model="@this.model.chkFrom"></WMCheckBoxComponent>
		<WMDateTimePicker model="@this.model.dtFrom"></WMDateTimePicker>
		<WMCheckBoxComponent model="@this.model.chkTo"></WMCheckBoxComponent>
		<WMDateTimePicker model="@this.model.dtTo"></WMDateTimePicker>
		<WMLabelComponent model="@this.model.Label1"></WMLabelComponent>
		<WMTextBoxComponent model="@this.model.txtOrderID"></WMTextBoxComponent>
		<WMLabelComponent model="@this.model.Label8"></WMLabelComponent>
		<WMTextBoxComponent model="@this.model.txtProductID"></WMTextBoxComponent>
	</WMGroupBoxComponent>
	<WMDataGridView model="@this.model.fgOrders"></WMDataGridView>
	<WMButtonComponent model="@this.model.cmdInfo"></WMButtonComponent>
	<WMButtonComponent model="@this.model.cmdApprove"></WMButtonComponent>
	<WMButtonComponent model="@this.model.cmdCancel"></WMButtonComponent>
	<WMButtonComponent model="@this.model.cmdClose"></WMButtonComponent>
	<WMStatusStrip model="@this.model.sbStatusBar">
		<WMToolStripStatusLabel model="@this.model.sbStatusBar_Panels_Panel1"></WMToolStripStatusLabel>
	</WMStatusStrip>
</WMFormComponent>

@code {
    [Parameter]
    public frmReceptionApproval model { get; set; }

    protected override void OnInitialized()
    {
        base.OnInitialized();
		model = model == null ? new frmReceptionApproval() : model;
        model.View = this.GetType();
    }
}
